{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ES2021.String"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "ES2024",
      "DOM",
      "ScriptHost"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "aether-api": [
        "build/aether.api.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}